pipeline {
  agent {
    docker {
      image 'abhishekf5/maven-abhishek-docker-agent:v1'
      args '--user root -v /var/run/docker.sock:/var/run/docker.sock'
    }
  }

  environment {
    SONAR_URL = "http://13.234.77.51:9000"
    DOCKER_IMAGE = "narupraveen/ultimate-cicd:${BUILD_NUMBER}"
    GIT_REPO_NAME = "CICD"
    GIT_USER_NAME = "NaruPraveenKumar"
  }

  stages {
    stage('Checkout') {
      steps {
        echo "âœ… Checkout stage passed"
        // If you want Jenkins to clone automatically, uncomment below:
         git branch: 'main', url: 'https://github.com/NaruPraveenKumar/CICD.git'
      }
    }

    stage('Build and Test') {
      steps {
        sh '''
          ls -ltr
          cd Downloads/Jenkins-Zero-To-Hero-3028953182b674ebad836b037f3347c1003cf94b/java-maven-sonar-argocd-helm-k8s/spring-boot-app
          mvn clean package
        '''
      }
    }

    stage('Static Code Analysis') {
      steps {
        withCredentials([string(credentialsId: 'sonarqube', variable: 'SONAR_AUTH_TOKEN')]) {
          sh '''
            cd Downloads/Jenkins-Zero-To-Hero-3028953182b674ebad836b037f3347c1003cf94b/java-maven-sonar-argocd-helm-k8s/spring-boot-app
            mvn sonar:sonar -Dsonar.login=$SONAR_AUTH_TOKEN -Dsonar.host.url=${SONAR_URL}
          '''
        }
      }
    }

    stage('Build and Push Docker Image') {
      environment {
        REGISTRY_CREDENTIALS = credentials('docker-cred')
      }
      steps {
        script {
          sh '''
            cd Downloads/Jenkins-Zero-To-Hero-3028953182b674ebad836b037f3347c1003cf94b/java-maven-sonar-argocd-helm-k8s/spring-boot-app
            docker build -t ${DOCKER_IMAGE} .
          '''
          def dockerImage = docker.image("${DOCKER_IMAGE}")
          docker.withRegistry('https://index.docker.io/v1/', "docker-cred") {
            dockerImage.push()
          }
        }
      }
    }

    stage('Update Deployment File') {
      steps {
        withCredentials([string(credentialsId: 'github', variable: 'GITHUB_TOKEN')]) {
          sh '''
            cd ${WORKSPACE}/Downloads/Jenkins-Zero-To-Hero-3028953182b674ebad836b037f3347c1003cf94b/java-maven-sonar-argocd-helm-k8s

            git config --global user.email "praveen1993.naru@gmail.com"
            git config --global user.name "NaruPraveenKumar"

            # FIX: Ensure we are on main branch (not detached HEAD)
            git fetch origin
            git checkout main || git checkout -b main
            git pull origin main

            # Replace the image tag
            sed -i "s/replaceImageTag/${BUILD_NUMBER}/g" spring-boot-app-manifests/deployment.yml

            # Commit and push
            git add spring-boot-app-manifests/deployment.yml
            git commit -m "Update deployment image to version ${BUILD_NUMBER}" || echo "No changes to commit"
            git push https://${GITHUB_TOKEN}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME}.git main
          '''
        }
      }
    }
  }
}
